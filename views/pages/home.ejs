<%-include('../partials/header.ejs')%>
<div class="container mt-3">
  <a href="/add" class="btn btn-primary">Add Blog</a>

  <div class="mt-3">
    <ul>
      <% blogs.forEach((blog)=>{ %>
      <li class="mb-3">
        <div class="row border rounded py-2">
          <div class="col-2">
            <img width="100%" src="<%=blog.image%>" alt="" />
          </div>
          <div class="col">
            <small style="color: lightslategray"><%=blog.username%></small>
            <h2><%=blog.title%></h2>
            <p><%=blog.description%></p>
          </div>
        </div>
      </li>
      <% }) %>
    </ul>
  </div>
</div>
<%-include('../partials/footer.ejs')%>
